<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="end|bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2000" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="54sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2000"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_clean"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="C"
        app:layout_constraintTop_toBottomOf="@+id/ll_result" />
    <Button
        android:id="@+id/btn_positive_negative"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="+/-"
        app:layout_constraintStart_toEndOf="@+id/btn_clean"
        app:layout_constraintTop_toBottomOf="@+id/ll_result" />
    <Button
        android:id="@+id/btn_percentage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="%"
        app:layout_constraintStart_toEndOf="@+id/btn_positive_negative"
        app:layout_constraintTop_toBottomOf="@+id/ll_result" />

    <Button
        android:id="@+id/btn_division"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_percentage"
        app:layout_constraintTop_toBottomOf="@+id/ll_result" />

    <!--Line Two-->
    <Button
        android:id="@+id/btn_n_seven"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="7"
        app:layout_constraintTop_toBottomOf="@id/btn_clean" />

    <Button
        android:id="@+id/btn_n_eight"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/btn_n_seven"
        app:layout_constraintTop_toBottomOf="@id/btn_clean" />
    <Button
        android:id="@+id/btn_n_nine"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@id/btn_n_eight"
        app:layout_constraintTop_toBottomOf="@id/btn_clean" />

    <Button
        android:id="@+id/btn_multiplication"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_n_nine"
        app:layout_constraintTop_toBottomOf="@id/btn_clean" />

    <!--Line Three-->
    <Button
        android:id="@+id/btn_n_four"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_seven" />

    <Button
        android:id="@+id/btn_n_five"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/btn_n_four"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_seven" />

    <Button
        android:id="@+id/btn_n_six"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/btn_n_five"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_seven" />

    <Button
        android:id="@+id/btn_subtraction"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_n_six"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_seven" />

    <!--Line Four-->
    <Button
        android:id="@+id/btn_n_one"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_four" />

    <Button
        android:id="@+id/btn_n_two"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/btn_n_one"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_four" />

    <Button
        android:id="@+id/btn_n_three"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/btn_n_two"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_four" />

    <Button
        android:id="@+id/btn_addition"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_n_three"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_four" />

    <!--Line Five-->
    <Button
        android:id="@+id/btn_n_dot"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="."
        app:layout_constraintTop_toBottomOf="@+id/btn_n_one" />

    <Button
        android:id="@+id/btn_n_zero"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/btn_n_dot"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_one" />

    <Button
        android:id="@+id/btn_n_delete"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:text="Del"
        app:layout_constraintStart_toEndOf="@+id/btn_n_zero"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_one" />

    <Button
        android:id="@+id/btn_result"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_n_delete"
        app:layout_constraintTop_toBottomOf="@+id/btn_n_one" />




</androidx.constraintlayout.widget.ConstraintLayout>